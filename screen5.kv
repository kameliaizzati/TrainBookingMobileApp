<Screen5>: #BOOKING SUMMARY
    name: "screen_five"

    MDBoxLayout:
        orientation: "vertical"
        spacing: 15
        padding: 25
        MDGridLayout: #Layout A
            cols: 2
            row_default_height: 50
            MDIconButton:
                icon: "chevron-left"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint_x: None
                width: 80
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = "screen_nine"
            MDLabel:
                text: "Booking Summary"
                halign: "center"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                font_style: "Subtitle1"

        MDCard: #Layout B
            size_hint_y: None
            height: 200
            MDBoxLayout:
                orientation: "vertical"
                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint_y: None
                    height: 100
                    MDLabel:
                        id: origin_5
                        text: "From" #text input using id
                        halign: "center"
                        font_style: "Subtitle2"
                    MDIcon:
                        icon: "chevron-right"
                        halign: "center"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    MDLabel:
                        id: destination_5
                        text: "To" #text input using id
                        halign: "center"
                        font_style: "Subtitle2"
                MDBoxLayout:
                    orientation: "vertical"
                    MDLabel:
                        id: time_5
                        text: "time" #text input using id
                        halign: "center"
                        font_style: "Subtitle2"
                    MDLabel:
                        id: depart_date_5
                        text: "Departure Date" #text input using id
                        halign: "center"
                        font_style: "Subtitle2"

        MDCard: #Layout C
            size_hint_y: None
            height: 100
            MDGridLayout:
                cols: 2
                row_default_height: 40
                MDLabel:
                    text: "Coach No"
                    halign: "center"
                    font_style: "Subtitle2"
                MDLabel:
                    id: coach_no_5
                    text: ""
                    halign: "center"
                    font_style: "Subtitle2"
                MDLabel:
                    text: "Seat No"
                    halign: "center"
                    font_style: "Subtitle2"
                MDLabel:
                    id: seat_no_5
                    text: "selected seat"
                    halign: "center"
                    font_style: "Subtitle2"

        MDCard: #Layout D
            MDGridLayout:
                cols: 2
                row_default_height: 40
                MDLabel:
                    text: "No of Pax"
                    halign: "center"
                    font_style: "Subtitle2"
                MDLabel:
                    text: "1"
                    halign: "center"
                    font_style: "Subtitle2"
                MDLabel:
                    text: "Total Amount"
                    halign: "center"
                    font_style: "Subtitle2"
                MDLabel:
                    id: prices_5
                    text: "RM"
                    halign: "center"
                    font_style: "Subtitle2"

        MDRectangleFlatButton: #Layout E
            text: "Confirm"
            bold: True
            halign: "center"
            font_size: "14sp"
            padding: 5
            pos_hint: {'center_x': 0.9, 'center_y': 0.1}
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "screen_six"



